<?xml version="1.0"?>
<scene  name="mechanism1"
        up="0 0 1"
        newtonion_frame="N"
        workspace_size="0.2"
        scene_origin="No"
        camera_eye_position="1 0 -0.1"
        camera_focus_position="0 0 -0.1"
        camera_fixed_frame="N"
        >

    <!-- You can define any number of custom colors, 
         either in advance or within the material tag of a link. -->
    <material name="MY_CUSTOM_BLUE">
        <color rgb="0.0 0.7 1.0" />
    </material>

    <simulation_file name="stable/babyboot.1:2" />
    <simulation_settings name="stable/babyboot.in" />
	
	
    <frame name="A" draw_basis="false">
        <visual>
            <geometry>
                <cylinder radius="0.005" length="0.15" >
                    <origin rpy="1.5708 0 0 " xyz="0 0 0"/>
                    <material name="SHINY_RED" />
                </cylinder>
            </geometry>
        </visual>
    </frame>

    <frame name="B" draw_basis="true">
        <visual>
            <geometry>
                <box size="0.01 0.15 0.1" >
                    <origin rpy="0 0 0 " xyz="0 0 0 "/>
                    <material name="MY_CUSTOM_BLUE" />
                </box>
            </geometry>
            
        </visual>
    </frame>
    
    <!-- You can create any number of decorative "ground" links. -->
        <frame name="N" draw_basis="false">
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.01" >
                    <origin rpy="0 0 1.5708" xyz="-0.01 0 0"/>
                    <material name="SHINY_BLACK" />
                </cylinder>
                <cylinder radius="0.01" length="0.1" >
                    <origin rpy="0 0 1.5708" xyz="-0.06 0 0"/>
                    <material name="SHINY_BLACK" />
                </cylinder>
                <box size="0.02 0.02 0.35" >
                    <origin rpy="0 0 0 " xyz="-0.1 0 -0.175 "/>
                    <material name="SHINY_SILVER" />
                </box>
            </geometry>

            <geometry>
                <box size="0.25 0.25 0.02" >
                    <origin rpy="0 0 0 " xyz="0 0 -0.35 "/>
                    <material name="MY_CUSTOM_BROWN" >
                        <color rgb="0.6 0.3 0" />
                    </material>
                </box>
            </geometry>
        </visual>
    </frame>

</scene>
