<?xml version="1.0"?>
<scene  name="wooden phantom"
        newtonion_frame="N"
        scene_origin="No"
        workspace_size="0.3"
        up="0 0 1"
        camera_eye_position="1 0.3 0.3"
        camera_focus_position="0.2 0 0.15"
        >

    <!-- You can define any number of custom colors, 
         either in advance or within the material tag of a link. -->
    <material name="MY_CUSTOM_BLUE">
        <color rgb="0.0 0.7 1.0" />
    </material>
    <material name="MY_CUSTOM_BROWN" >
        <color rgb="0.6 0.3 0" />
    </material>

    <simulation_file name="wooden_phantom.2:6" />
    <simulation_settings name="wooden_phantom.in" />
	
	
    <frame name="A" draw_basis="false">
        <visual>
            <geometry>
                <mesh path="LinkA.obj" >
                    <material name="MY_CUSTOM_BROWN" />
                </mesh>
            </geometry>
        </visual>
    </frame>

    <frame name="B" draw_basis="false">
        <visual>
            <geometry>
                <mesh path="LinkB.obj" >
                    <origin rpy="0 0 0" xyz="0 0.01865 0" />
                    <material name="MY_CUSTOM_BROWN" />
                </mesh>
            </geometry>

        </visual>
    </frame>

    <frame name="C" draw_basis="true">
        <visual>
            <geometry>
                <mesh path="LinkC.obj" >
					<material name="MY_CUSTOM_BROWN" />
                </mesh>
            </geometry>
        </visual>
    </frame>
	
	<point name="Q" draw_basis="true" use_rotation_of_frame="C">
        <visual>
            <geometry>
                <sphere radius="0.01" />
            </geometry>
        </visual>
    </point>
	
	<point name="P" draw_basis="false">
        <visual>
            <geometry>
                <sphere radius="0.01" >
					<material name="SHINY_GREEN" />
				</sphere>
            </geometry>
        </visual>
    </point>
	
	<span name="virtual_spring" type="cable" point1="Q" point2="P">
        <material name="SHINY_RED" />
    </span>
    
    <!-- You can create any number of decorative "ground" links. -->
	<frame name="ground" draw_basis="false">
        <visual>
            <geometry>
                <box size="0.25 0.25 0.02" >
                    <origin rpy="0 0 0 " xyz="0 0 -0.01"/>
                    <material name="MAT_BLACK" />
                </box>
            </geometry>
        </visual>
    </frame>

</scene>
