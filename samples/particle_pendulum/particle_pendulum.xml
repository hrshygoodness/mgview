<?xml version="1.0"?>
<scene name="particle_pendulum"
       up="0 1 0"
       newtonion_frame="N"
       scene_origin="No"
       workspace_size="0.5"
       camera_eye_position="0 -0.25 2"
       camera_focus_position="0 -0.25 0"

       time_step="0.02"
	>

    <simulation_file name="particle_pendulum.1:3" />
    <simulation_settings name="particle_pendulum.in" />

    <frame name="B" >
        <visual>
            <geometry>
                <!-- It is equivalent to define this rod as a cylinder or as a truncated cone. -->
                <cylinder length="0.5" radius="0.01" >
                    <origin rpy="0 0 0 " xyz="0 -0.25 0"/>
                    <material name="SHINY_BLACK" />
                </cylinder> 
            </geometry>

            <geometry>
                <torus radius="0.015" thickness="0.03"  >
                    <origin rpy="0 0 0 " xyz="0 0 0 "/>
                    <material name="SHINY_SILVER" />
                </torus>
                <cylinder radius="0.015" length="0.025"  >
                    <origin rpy="1.5708 0 0 " xyz="0 0 0 "/>
                    <material name="SHINY_SILVER" />
                </cylinder>
            </geometry>
        </visual>
    </frame>

    <!-- Here we include the 'use_rotation_of_frame' argument so that the sphere
         representing the particle will appear fixed on B rather than appearing
         to pivot on the end point. -->
    <point name="Q" use_rotation_of_frame="B" draw_basis="false" >
        <visual>
            <geometry>
                <sphere radius="0.05" >
                    <origin rpy="0 0 0 " xyz="0 0 0 "/>
                    <material name="SHINY_RED" />
                </sphere>
            </geometry>
        </visual>
    </point>
    
    <!-- You can create any number of decorative "ground" links. -->
	<frame name="N" draw_basis="false">
        <visual>
            <geometry>
                <box size="1 0.02 1" >
                    <origin rpy="0 0 0 " xyz="0 -0.65 0 "/>
                    <material name="MY_CUSTOM_BROWN" >
						<color rgb="0.6 0.3 0" />
					</material>
                </box>
            </geometry>
        </visual>
    </frame>

</scene>
