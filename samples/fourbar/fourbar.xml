<?xml version="1.0"?>
<scene  name="mechanism1"
        up="-1 0 0"
        newtonion_frame="N"
        workspace_size="2.0"
        scene_origin="Na"
        camera_eye_position="1 1 7"
        camera_focus_position="1 1 0"
        >

    <!-- You can define any number of custom colors, 
         either in advance or within the material tag of a link. -->
    <material name="MY_CUSTOM_BLUE">
        <color rgb="0 0.7 1.0" />
    </material>

    <simulation_file name="normal/fourbar.1:3" />
    <simulation_settings name="normal/fourbar.in" />

    <frame name="A" draw_basis="false">
        <visual>
            <geometry>
                <box size="1 0.1 0.1" >
                    <origin rpy="0 0 0 " xyz="0 0 0 "/>
                    <material name="MAT_RED" />
                </box>
                
            </geometry>
        </visual>
    </frame>

    <frame name="B" draw_basis="false">
        <visual>
            <geometry>
                <box size="2 0.1 0.1" >
                    <origin rpy="0 0 0 " xyz="0 0 0 "/>
                    <material name="MAT_GREEN" />
                </box>
            </geometry>
            
        </visual>
    </frame>

    <frame name="C" draw_basis="false">
        <visual>
            <geometry>
                <box size="2 0.1 0.1" >
                    <origin rpy="0 0 0 " xyz="0 0 0 "/>    
                    <material name="MY_CUSTOM_BLUE" />
                </box>
            </geometry>
            
        </visual>
    </frame>
	
    <!-- You can create any number of decorative "ground" links. -->
	<frame name="N" draw_basis="false">
        <visual>
            <geometry>
                <box size="0.02 2 2" >
                    <origin rpy="0 0 0 " xyz="2.5 0 0 "/>
                    <material name="MY_CUSTOM_BROWN" >
						<color rgb="0.6 0.3 0" />
					</material>
                </box>
            </geometry>
        </visual>
    </frame>

</scene>
