<?xml version="1.0"?>
<scene  name="BodyRotation"
        up="0 0 1"
        newtonion_frame="N"
        workspace_size="0.2"
        scene_origin="No"
        camera_eye_position="1 0.3 1"
        camera_focus_position="0 0 -0.1"
        camera_fixed_frame="N"
        >

    <!-- You can define any number of custom colors, 
         either in advance or within the material tag of a link. -->
    <material name="MY_CUSTOM_BLUE">
        <color rgb="0.0 0.7 1.0" />
    </material>

    <simulation_file name="EulerParameters3DOrientation.1:2" />
    <simulation_settings name="EulerParameters3DOrientation.in" />

    <frame name="B" draw_basis="true">
        <visual>
            <geometry>
                <box size="0.15 0.08 0.02" >
                    <origin rpy="0 0 0 " xyz="0 0 0 "/>
                    <material name="MY_CUSTOM_BLUE" />
                </box>
            </geometry>
            
        </visual>
    </frame>
    
    <!-- You can create any number of decorative "ground" links. -->

    
    <!-- You can create any number of decorative "ground" links. -->
	<frame name="ground" draw_basis="false">
        <visual>
            <geometry>
                <box size="0.25 0.25 0.02" >
                    <origin rpy="0 0 0 " xyz="0 0 -0.35 "/>
                    <material name="MY_CUSTOM_BROWN" >
						<color rgb="0.6 0.3 0" />
					</material>
                </box>
            </geometry>
        </visual>
    </frame>

</scene>
